<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/p10">

        <TextView
            android:id="@+id/itemsNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/puma"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_10"
            android:layout_marginEnd="@dimen/m10"
            app:layout_constraintEnd_toStartOf="@+id/qtyValueTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qtyValueTV"
            android:layout_width="@dimen/m20"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/m100"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/_4"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="@+id/itemsNameTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemsNameTV" />


        <TextView
            android:id="@+id/totalAmountValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m5"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/rs_1652"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="@+id/itemsNameTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemsNameTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>