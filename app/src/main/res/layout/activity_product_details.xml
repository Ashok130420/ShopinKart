                    <LinearLayout
                        android:id="@+id/indicatorsContainersProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/productViewPager" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/downloadImageIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/m14"
                    android:src="@drawable/download_image_icon"
                    app:layout_constraintEnd_toEndOf="@+id/imageSliderCL"
                    app:layout_constraintTop_toTopOf="@+id/imageSliderCL"
                    tools:ignore="ContentDescription" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/productDetailsCL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/m14"
                    android:layout_marginTop="184dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/imageSliderCL"
                    tools:layout_editor_absoluteX="-48dp">

                    <TextView
                        android:id="@+id/idTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p2"
                        android:textColor="@color/dark_Gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/t_shirtNameTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p4"
                        android:text=""
                        android:singleLine="false"
                        android:layout_marginEnd="@dimen/m10"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_16"
                        app:layout_constraintEnd_toStartOf="@+id/discountTagRightIV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/idTV" />

                    <ImageView
                        android:id="@+id/discountTagRightIV"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/inter_regular"
                        android:scaleType="fitXY"
                        android:src="@drawable/discount_tag_right"
                        app:layout_constraintBottom_toBottomOf="@+id/t_shirtNameTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/t_shirtNameTV"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/discountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m5"
                        android:padding="@dimen/p1"

                        android:textColor="@color/white"
                        android:textSize="@dimen/m10"
                        app:layout_constraintBottom_toBottomOf="@+id/discountTagRightIV"
                        app:layout_constraintStart_toStartOf="@+id/discountTagRightIV"
                        app:layout_constraintTop_toTopOf="@id/discountTagRightIV"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/discountedPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m6"
                        android:paddingVertical="@dimen/p2"

                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/t_shirtNameTV" />

                    <TextView
                        android:id="@+id/actualPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m14"
                        android:paddingVertical="@dimen/p2"

                        android:textColor="@color/dark_Gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintBottom_toBottomOf="@+id/discountedPriceTV"
                        app:layout_constraintStart_toEndOf="@+id/discountedPriceTV"
                        app:layout_constraintTop_toTopOf="@+id/discountedPriceTV" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/dark_Gray"
                        app:layout_constraintBottom_toBottomOf="@+id/actualPriceTV"
                        app:layout_constraintEnd_toEndOf="@+id/actualPriceTV"
                        app:layout_constraintStart_toStartOf="@+id/actualPriceTV"
                        app:layout_constraintTop_toTopOf="@+id/actualPriceTV" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m10"
                        android:numStars="5"

                        android:theme="@style/RatingBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/discountedPriceTV" />

                    <TextView
                        android:id="@+id/unitesLeftTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_text_blue"
                        android:paddingHorizontal="@dimen/p14"
                        android:paddingVertical="@dimen/p4"
                        android:textColor="@color/primary_Blue"
                        android:textSize="@dimen/text_size_12"
                        android:text="@string/few_units_left"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/ratingBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/discountedPriceTV" />

                    <ImageView
                        android:id="@+id/dispatchedIV"
                        android:layout_width="@dimen/m35"
                        android:layout_height="@dimen/m35"
                        android:visibility="invisible"
                        android:padding="@dimen/p4"
                        android:src="@drawable/calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ratingBar"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/dispatchedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m14"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintBottom_toBottomOf="@+id/dispatchedIV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/dispatchedIV" />

                    <ImageView
                        android:id="@+id/deliveryIV"
                        android:layout_width="@dimen/m35"
                        android:layout_height="@dimen/m35"
                        android:layout_marginTop="@dimen/m5"
                        android:padding="@dimen/p4"
                        android:src="@drawable/delivery"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dispatchedIV"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/deliveryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m14"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/deliveryIV"
                        app:layout_constraintStart_toEndOf="@+id/deliveryIV"
                        app:layout_constraintTop_toTopOf="@+id/deliveryIV" />

                    <TextView
                        android:id="@+id/selectColorTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m16"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p2"
                        android:text="@string/select_color"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deliveryIV" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectColorRV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selectColorTV"
                        tools:itemCount="4"
                        tools:listitem="@layout/items_select_color" />

                    <TextView
                        android:id="@+id/selectSizeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m16"
                        android:fontFamily="@font/inter_regular"
                        android:paddingVertical="@dimen/p2"
                        android:text="@string/select_size"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/selectColorRV" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectSizeRV"
