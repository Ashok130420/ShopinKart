                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/deliveryInstructionHeaderCL">

                            <TextView
                                android:id="@+id/deliveryInstructionDetailsTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m10"
                                android:inputType="textMultiLine"
                                android:textColor="@color/grey_font"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="TextViewEdits" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/similarProductCL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m24"
                    android:layout_marginBottom="@dimen/m60"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/productsCL">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_Gray"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/similarProductsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/p14"
                        android:paddingVertical="@dimen/p2"
                        android:text="@string/similar_products"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarProductsRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m18"
                        android:orientation="horizontal"
                        android:padding="@dimen/p4"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/similarProductsTV"
                        tools:listitem="@layout/items_similar_products"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/p18"
            android:paddingVertical="@dimen/p8"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/buyNowTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m10"
                android:background="@drawable/shape_text_blue"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:paddingVertical="@dimen/p14"
                android:text="@string/buy_now"
                android:textColor="@color/primary_Blue"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toStartOf="@+id/addToCartTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/addToCartTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m10"
                android:background="@drawable/button_blue_radius5"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:paddingVertical="@dimen/p14"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buyNowTV"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
