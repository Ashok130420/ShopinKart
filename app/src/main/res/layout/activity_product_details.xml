                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/m14"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/productDescriptionCL">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/productChecklistHeaderCL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/productCheckListTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m8"
                                android:background="@color/fragment_background"
                                android:paddingVertical="@dimen/p12"
                                android:text="@string/product_checklist"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                />

                            <ImageView
                                android:id="@+id/productCheckListIV"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/p8"
                                android:src="@drawable/arrow_next"
                                app:layout_constraintBottom_toBottomOf="@+id/productCheckListTV"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/productCheckListTV"
                                tools:ignore="ContentDescription" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_Gray"
                                app:layout_constraintBottom_toBottomOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/productCheckListDetailsCL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/productChecklistHeaderCL">

                            <TextView
                                android:id="@+id/productCheckListDetailsTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m10"
                                android:inputType="textMultiLine"
                                android:textColor="@color/grey_font"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="TextViewEdits" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/readReviewsCL"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/m14"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/productChecklistCL">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/readReviewsHeaderCL"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/readReviewsTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m8"
                                android:background="@color/fragment_background"
                                android:paddingVertical="@dimen/p12"
                                android:text="@string/read_reviews_4"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                />

                            <RatingBar
                                android:id="@+id/ratingBarReview"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/m6"
                                android:isIndicator="true"
                                android:numStars="1"
                                android:rating="1"
                                android:theme="@style/RatingBar"
                                app:layout_constraintBottom_toBottomOf="@+id/readReviewsTV"
                                app:layout_constraintEnd_toEndOf="@+id/readReviewsTV"
                                app:layout_constraintTop_toTopOf="@+id/readReviewsTV" />


                            <ImageView
                                android:id="@+id/readReviewsIV"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/p8"
                                android:src="@drawable/arrow_next"
                                app:layout_constraintBottom_toBottomOf="@+id/readReviewsTV"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/readReviewsTV"
                                tools:ignore="ContentDescription" />

                            <View
                                android:id="@+id/reviewHeaderView"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_Gray"
                                app:layout_constraintBottom_toBottomOf="@+id/readReviewsTV"

                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

