                    android:background="@drawable/background_corners_round"
                    app:layout_constraintTop_toBottomOf="@+id/productDetailsCL">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/productDescriptionCL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/m14"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/productDescriptionHeaderCL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/productDescriptionTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m8"
                                android:background="@color/fragment_background"
                                android:paddingVertical="@dimen/p12"
                                android:text="@string/product_description"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                />

                            <ImageView
                                android:id="@+id/productDescriptionIV"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/p8"
                                android:src="@drawable/arrow_next"
                                app:layout_constraintBottom_toBottomOf="@+id/productDescriptionTV"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/productDescriptionTV"
                                tools:ignore="ContentDescription" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/light_Gray"
                                app:layout_constraintBottom_toBottomOf="parent"

                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/productDescriptionDetailsCL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/productDescriptionHeaderCL">

                            <TextView
                                android:id="@+id/productDescriptionDetailsTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/m10"
                                android:inputType="textMultiLine"
                                android:textColor="@color/grey_font"
                                android:textSize="@dimen/text_size_14"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="TextViewEdits" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/productChecklistCL"
