                        app:layout_constraintTop_toBottomOf="@+id/selectSizeRV" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/quantityCL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
