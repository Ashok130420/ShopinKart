                            app:layout_constraintStart_toEndOf="@+id/quantityShowTV"
                            app:layout_constraintTop_toTopOf="@+id/plusQuantityTV"
                            tools:ignore="ContentDescription" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
