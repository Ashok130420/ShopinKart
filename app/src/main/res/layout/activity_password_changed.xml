<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PasswordChangedActivity">

        <ImageView
            android:id="@+id/codeVerifyIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:layout_marginHorizontal="@dimen/m50"
            android:layout_marginTop="@dimen/m200"
            android:src="@drawable/code_verify"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/pleaseResetTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/m18"
            android:layout_marginTop="@dimen/m50"
            android:gravity="center"
            android:text="@string/your_password_has_been_successfully_nchanged"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/codeVerifyIV" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>